@model IEnumerable<dynamic>

<div class="container-fluid px-4 px-md-5">
    <div class="row justify-content-center py-5">
        <div class="col-md-8 col-lg-6 text-center">
            <h1 class="display-4 fw-bold text-white mb-2">Discover</h1>
            <p class="text-secondary mb-4">Explore millions of movies and books in your digital catalog.</p>
            
            <form asp-action="Index" method="get" class="search-wrapper" autocomplete="off">
    <div class="input-group search-box-glow p-1 rounded-pill bg-dark">
        <span class="input-group-text bg-transparent border-0 text-secondary ps-4">
            <i class="fas fa-search"></i>
        </span>
        
        <input type="text" name="searchTerm" 
               class="form-control bg-transparent text-white border-0 shadow-none py-3" 
               placeholder="Search movies, books, or authors..." 
               autocomplete="off"> 
               
        <button class="btn btn-primary rounded-pill px-4 me-1 fw-bold" type="submit">
            SEARCH
        </button>
    </div>
</form>
        </div>
    </div>

    <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 row-cols-xl-6 g-4 mb-5">
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="col animate-in">
                    <div class="card h-100 bg-transparent border-0 movie-poster-card">
                        <div class="position-relative overflow-hidden rounded-4 shadow-lg h-100">
                            <img src="@item.ImageUrl" class="w-100 h-100 poster-img" 
                                 alt="@item.Title" style="aspect-ratio: 2/3; object-fit: cover;">
                            
                            <div class="poster-overlay">
                                <form asp-action="AddToLibrary" method="post">
                                    <input type="hidden" name="Title" value="@item.Title" />
                                    <input type="hidden" name="ImageUrl" value="@item.ImageUrl" />
                                    <input type="hidden" name="ExternalId" value="@item.Id" />
                                    <button type="submit" class="btn btn-light rounded-circle p-3 shadow-lg hover-scale">
                                        <i class="fas fa-plus fa-lg text-dark"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                        <div class="mt-3 text-center">
                            <h6 class="text-white text-truncate mb-0">@item.Title</h6>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>