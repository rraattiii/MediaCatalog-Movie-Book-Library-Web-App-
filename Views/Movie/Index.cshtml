@using MediaCatalogApp.Models
@model List<MovieResult>

<div class="container-fluid px-4 px-md-5 py-5">
    <div class="row justify-content-center mb-5">
        <div class="col-md-8 col-lg-6 text-center">
            <h1 class="display-5 fw-bold text-white mb-3">Discover Movies</h1>
            <p class="text-secondary mb-4">Search thousands of movie titles</p>
            
            <form asp-action="Index" method="get" class="search-wrapper" autocomplete="off">
                <div class="input-group search-box-glow p-1 rounded-pill bg-dark">
                    <span class="input-group-text bg-transparent border-0 text-secondary ps-4">
                        <i class="fas fa-search"></i>
                    </span>
                    
                    <input type="text" name="searchTerm" 
                           class="form-control bg-transparent text-white border-0 shadow-none py-3" 
                           placeholder="Enter movie title..." 
                           autocomplete="off">
                    
                    <button class="btn btn-primary rounded-pill px-4 me-1 fw-bold" type="submit">
                        GO
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 row-cols-xl-6 g-4 mb-5">
            @foreach (var movie in Model)
            {
                <div class="col animate-in">
                    <div class="card h-100 bg-transparent border-0 movie-poster-card">
                        <div class="position-relative overflow-hidden rounded-4 shadow-lg">
                            <img src="@movie.PosterUrl" class="w-100 h-100 poster-img" 
                                 alt="@movie.Title" style="aspect-ratio: 2/3; object-fit: cover;">
                            
                            <div class="poster-overlay d-flex align-items-center justify-content-center">
                                <form asp-action="AddToLibrary" method="post">
                                    <input type="hidden" name="Title" value="@movie.Title" />
                                    <input type="hidden" name="ImageUrl" value="@movie.PosterUrl" />
                                    <input type="hidden" name="ExternalId" value="@movie.Id" />
                                    <input type="hidden" name="MediaType" value="Movie" />
                                    <button type="submit" class="btn btn-light rounded-circle p-3 shadow-lg hover-scale">
                                        <i class="fas fa-plus fa-lg text-dark"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                        <div class="mt-3 text-center">
                            <div class="text-white text-truncate small fw-bold">@movie.Title</div>
                            <div class="text-secondary smaller">
                                @(string.IsNullOrEmpty(movie.ReleaseDate) ? "N/A" : movie.ReleaseDate.Split('-')[0])
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5 opacity-50">
            <i class="fas fa-film fa-3x mb-3 text-secondary d-block"></i>
            <h5 class="text-secondary">Type a title above to see results...</h5>
        </div>
    }
</div>