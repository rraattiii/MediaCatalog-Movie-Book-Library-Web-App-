<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MediaHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" rel="stylesheet">
</head>
<body class="d-flex flex-column h-100 bg-black text-white">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom border-secondary shadow-sm">
    <div class="container-fluid px-4">
        <a class="navbar-brand fw-bold text-primary" asp-controller="Home" asp-action="Index">
            <i class="fas fa-compact-disc me-2"></i>MEDIA<span class="text-white">CATALOG</span>
        </a>
        
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Movie" ? "active border-bottom border-primary" : "")" 
                       asp-controller="Movie" asp-action="Index">Movies</a>
                </li>
                <li class="nav-item ms-lg-3">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Book" ? "active border-bottom border-primary" : "")" 
                       asp-controller="Book" asp-action="Index">Books</a>
                </li>
                <li class="nav-item ms-lg-3">
                    <a class="nav-link" asp-controller="Movie" asp-action="MyLibrary">
                        <i class="fas fa-bookmark me-1"></i> My Library
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>
    </header>

    <main role="main" class="flex-shrink-0 flex-grow-1">
        @RenderBody()
    </main>

    <footer class="footer mt-auto py-4 bg-black border-top border-dark">
    <div class="container text-center">
        <div class="mb-3">
            <a href="https://github.com/rraattiii" target="_blank" class="text-secondary mx-3 hover-primary transition">
                <i class="fab fa-github fa-2x"></i>
            </a>
            <a href="https://www.linkedin.com/in/rati-kotchuashvili-3a98582a3/" target="_blank" class="text-secondary mx-3 hover-primary transition">
                <i class="fab fa-linkedin fa-2x"></i>
            </a>
        </div>
        <p class="text-muted small mb-0">
            &copy; 2026 - Developed by <span class="text-white fw-bold">Rati Kotchuashvili</span>
        </p>
    </div>
</footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>